<?xml version="1.0" encoding="utf-8" ?>
<widget id="GridSearch.widget.Dropdown" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Dropdown - Dynamic</name>
    <description>The description of this widget.</description>

	<icon> 
	</icon>

    <properties>
        <property key="targetGridName" type="string" required="false" defaultValue="">
            <caption>Grid Name</caption>
            <category>Appearance</category>
            <description>The name of the grid on this page, as configured in the modeler. Optionally use a class name instead in the "Grid Class" parameter.</description>
        </property>
        <property key="targetGridClass" type="string" required="false" defaultValue="">
            <caption>Grid Class</caption>
            <category>Appearance</category>
            <description>(Optional) Instead of a grid name, you can enter the CSS class of one or more grids here. Any grids on the page with this class will be connected.</description>
        </property>		
		<property key="filterLabel" type="string" required="true" defaultValue="">
			<caption>Filter Label</caption>
			<category>Appearance</category>
			<description>A label to be used by the Applied Filters widget when this widget has an active filter.</description>
		</property>		
		<property key="showLabel" type="boolean" required="true" defaultValue="true">
            <caption>Show label</caption>
            <category>Appearance</category>
            <description>Whether to show the search box label.</description>
        </property>
		<property key="caption" type="string" required="true" defaultValue="">
            <caption>Input Label</caption>
            <category>Appearance</category>
            <description>The label that will appear next to the search input.</description>
        </property>
		<property key="emptyCaption" type="string" required="true" defaultValue="(none)">
            <caption>Empty Caption</caption>
            <category>Appearance</category>
            <description>The caption to be used on the empty/all dropdown option.</description>
        </property>		
		<property key="gridEntity" type="entity" required="true">
		    <caption>Grid Entity</caption>
			<category>Behavior</category>
	 		<description>The type of objects in the grid.</description>
		</property>
		<property key="searchType" type="enumeration" defaultValue="eq">
			<caption>Search Method</caption>
			<category>Behavior</category>
			<description>Search method to use</description>
			<enumerationValues>
				<enumerationValue key="eq">equal</enumerationValue>
				<enumerationValue key="neq">not equal</enumerationValue>
			</enumerationValues>
		</property>
		<property key="multiSelect" type="boolean" defaultValue="false">
			<caption>Multi-select</caption>
			<category>Behavior</category>
			<description>Renders a single or multi-select dropdown.</description>
		</property>
		<property key="cascadeKey" type="string" required="false">
		  <caption>Cascade Key</caption>
		  <category>Behavior</category>
		  <description>If you'd like *other* dynamic dropdowns to be constrained by the selected value of *this* one, set a key here. You'll reference this key from the other instance</description>
		</property>
		<property key="listenKey" type="string" required="false">
		  <caption>Listen Key</caption>
		  <category>Behavior</category>
		  <description>If you'd like the values in *this* dynamic dropdown to be constrained by *another* one, enter the Cascade Key from the other widget here.</description>
		</property>
		<property key="listenPath" type="entity" entityProperty="dropdownEntity" isPath="yes" allowNonPersistableEntities="false" pathType="reference" required="false">
		  <caption>Path to Listen</caption>
		  <category>Behavior</category>
		  <description>The path from the Dropdown entity to the Entity in the Cascaded filter</description>
		</property>
		<property key="pathToAttribute" type="attribute" entityProperty="gridEntity" isPath="optional" pathType="reference" required="false">
			<caption>Attribute</caption>
			<category>Behavior</category>
			<description>The attribute to use in the filter. For local attributes, only Enumerations and Boolean are valid selections. When following a path, any attribute type is valid.</description>
			<attributeTypes>
				<attributeType name="String"/>
				<attributeType name="Integer"/>
				<attributeType name="Decimal"/>
				<attributeType name="DateTime"/>
				<attributeType name="Long"/>
				<attributeType name="AutoNumber"/>
				<attributeType name="Boolean"/>
				<attributeType name="Enum"/>
			</attributeTypes>
		</property>
		<property key="stringPathToAttribute" type="string" required="false" defaultValue="">
            <caption>Attribute (manual)</caption>
            <category>Behavior</category>
            <description>A manually written path from the list entity to the attribute you want to use. Only used when Attribute is not selected.</description>
        </property>
		<property key="dropdownEntity" type="entity" required="false">
		    <caption>Dropdown Entity</caption>
			<category>Behavior</category>
	 		<description>The entity to be shown in the dropdown list. Required for sort to work.</description>
		</property>
		<property key="constraint" type="entityConstraint" entityProperty="dropdownEntity" required="false">
		    <caption>XPath Constraint</caption>
			<category>Behavior</category>
			<description>When using a path to an entity for this dropdown, you can optionally filter the list of selectable items using xpath here.</description>
		</property>
		<property key="sort" type="object" isList="true" required="false">
            <caption>Sort Attributes</caption>
            <category>Behavior</category>
            <description>The attributes that will be used to sort the dropdown list.</description>
            <properties>
				<property key="attribute" type="attribute" required="false" entityProperty="../dropdownEntity" isPath="optional" pathType="reference">
		            <caption>Attribute</caption>
		            <category>Basic</category>
		            <description>The attribute to sort on.</description>
					<attributeTypes>
						<attributeType name="Enum"/>
						<attributeType name="String"/>
						<attributeType name="Integer"/>
						<attributeType name="Decimal"/>
						<attributeType name="Long"/>
						<attributeType name="AutoNumber"/>
					</attributeTypes>
				</property>
				<property key="direction" type="enumeration" defaultValue="asc">
					<caption>Direction</caption>
					<category>Basic</category>
					<description></description>
					<enumerationValues>
						<enumerationValue key="asc">Ascending</enumerationValue>
						<enumerationValue key="desc">Descending</enumerationValue>
					</enumerationValues>
				</property>
				
            </properties>
        </property>		
    </properties>
</widget>
