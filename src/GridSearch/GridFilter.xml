<?xml version="1.0" encoding="utf-8" ?>
<widget id="GridSearch.widget.GridFilter" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Dropdown - Static</name>
    <description>The description of this widget.</description>

	<icon> 
	</icon>

    <properties>
        <property key="targetGridName" type="string" required="false" defaultValue="">
            <caption>Grid Name</caption>
            <category>Appearance</category>
            <description>The name of the grid on this page, as configured in the modeler. Optionally use a class name instead in the "Grid Class" parameter.</description>
        </property>
        <property key="targetGridClass" type="string" required="false" defaultValue="">
            <caption>Grid Class</caption>
            <category>Appearance</category>
            <description>(Optional) Instead of a grid name, you can enter the CSS class of one or more grids here. Any grids on the page with this class will be connected.</description>
        </property>		
		<property key="filterLabel" type="string" required="true" defaultValue="">
			<caption>Filter Label</caption>
			<category>Appearance</category>
			<description>A label to be used by the Applied Filters widget when this widget has an active filter.</description>
		</property>
		<property key="gridEntity" type="entity" required="true">
		    <caption>Grid Entity</caption>
			<category>Behavior</category>
	 		<description>The type of objects in the grid.</description>
		</property>
		<property key="blankOptionLabel" type="string" required="true" defaultValue="(None)">
			<caption>Placeholder text</caption>
			<category>Appearance</category>
			<description>A placeholder text for the default "empty" option in the drodown.</description>
		</property>

		<property key="searchOptions" type="object" isList="true" required="false">
            <caption>Search Attributes</caption>
            <category>Static Options</category>
            <description>The attributes that will be considered when searching.</description>
            <properties>
				<property key="optionLabel" type="string" required="true">
					<caption>Option Label</caption>
					<category>Behavior</category>
					<description>The label for this option in the dropdown.</description>
				</property>
				<property key="optionXPath" type="entityConstraint" entityProperty="../gridEntity" required="false">
		            <caption>XPath</caption>
		            <category>Behavior</category>
		            <description>An XPath contraint to apply when this option is selected. (i.e. [Color='Blue'])</description>
		        </property>
				<property key="isDefault" type="boolean" defaultValue="false">
				  <caption>Default?</caption>
				  <category>Behavior</category>
				  <description>should this filter be applied by default?</description>
				</property>
            </properties>
        </property>
		<property key="useDynamicOptions" type="boolean" required="true" defaultValue="false">
			<caption>Enable dynamic options</caption>
			<category>Dynamic Options</category>
			<description>Whether to enable a dynamic list of options in the dropdown based on an XPath query.</description>
		</property>
		<property key="dynamicOptionEntity" type="entity" entityProperty="gridEntity" isPath="optional" pathType="reference" required="false">
		    <caption>Entity</caption>
			<category>Dynamic Options</category>
	 		<description>The type of objects to use in the dynamic options</description>
		</property>
		<property key="dynamicOptionAttribute" type="attribute" entityProperty="dynamicOptionEntity" required="false">
			<caption>Attribute</caption>
			<category>Dynamic Options</category>
			<description>The attribute to use in the filter.</description>
			<attributeTypes>
				<attributeType name="Enum"/>
				<attributeType name="String"/>
				<attributeType name="Integer"/>
				<attributeType name="Decimal"/>
				<attributeType name="Boolean"/>
				<attributeType name="DateTime"/>
				<attributeType name="Long"/>
				<attributeType name="AutoNumber"/>
			</attributeTypes>
		</property>
		<property key="dynamicOptionXPath" type="entityConstraint" entityProperty="dynamicOptionEntity" required="false">
			<caption>XPath</caption>
			<category>Dynamic Options</category>
			<description>An XPath contraint to apply on the dynamic option entity. (i.e., only show filter options meeting this condition)</description>
		</property>
    </properties>
</widget>
