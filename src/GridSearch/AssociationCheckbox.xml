<?xml version="1.0" encoding="utf-8" ?>
<widget id="GridSearch.widget.AssociationCheckbox" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
	<name>Checkbox - Association</name>
	<description>Filter for a datagrid shown as check boxes</description>

	<icon>
		
	</icon>

	<properties>
		<property key="targetGridName" type="string" required="false" defaultValue="">
			<caption>Grid Name</caption>
			<category>Behavior</category>
			<description>The name of the grid on this page, as configured in the modeler. Optionally use a class name instead in the "Grid Class" parameter.</description>
		</property>
        <property key="targetGridClass" type="string" required="false" defaultValue="">
            <caption>Grid Class</caption>
            <category>Behavior</category>
            <description>(Optional) Instead of a grid name, you can enter the CSS class of one or more grids here. Any grids on the page with this class will be connected.</description>
        </property>		
		<property key="gridEntity" type="entity" required="true">
			<caption>Grid Entity</caption>
			<category>Behavior</category>
			<description>The type of objects in the grid.</description>
		</property>
		<property key="displayVisualization" type="boolean" defaultValue="true">
			<caption>Display Visualization</caption>
			<category>Appearance</category>
			<description>Whether to display a bar chart of how many results each filter will return.</description>
		</property>
		<property key="filterLabel" type="string" required="true" defaultValue="">
			<caption>Filter Label</caption>
			<category>Appearance</category>
			<description>A label to be used by the Applied Filters widget when this widget has an active filter.</description>
		</property>
		<property key="contextEntity" type="entity" required="false">
			<caption>Context Entity</caption>
			<category>Appearance</category>
			<description>(Optional) Used for the Filter Label Attribute. If this widget is in a context, choose the context type here.</description>
		</property>
		<property key="filterLabelAttribute" type="attribute" entityProperty="contextEntity" required="false">
			<caption>Filter Label Attribute</caption>
			<category>Appearance</category>
			<description>(Optional) If set, override Filter Label setting (used with Applied Filters widget) with a dynamic value from the context entity.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="filterEntity" type="entity" required="true">
			<caption>Filter Entity</caption>
			<category>Behavior</category>
			<description>The type of object to filter by.</description>
		</property>
		<property key="filterType" type="enumeration" defaultValue="reference">
			<caption>Filter Type</caption>
			<category>Behavior</category>
			<description>Choose between filtering over an association (reference or reference set), or via xpath constraints. XPath contraints should be defined as an attribute on a filter entity, and should operate upon the grid entity.</description>
			<enumerationValues>
				<enumerationValue key="reference">Reference</enumerationValue>
				<enumerationValue key="referenceSet">Reference Set</enumerationValue>
				<enumerationValue key="customPath">Custom Path</enumerationValue>
				<enumerationValue key="xpath">XPath</enumerationValue>
			</enumerationValues>
		</property>
		<property key="labelAttribute" type="attribute" entityProperty="filterEntity" required="false">
			<caption>Label Attribute</caption>
			<category>Behavior</category>
			<description>Used for the "xpath" option. This attribute contains the label to display for this filter option.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="filterLabelItemAttribute" type="attribute" entityProperty="filterEntity" required="false">
			<caption>Active Filter Label Attr</caption>
			<category>Behavior</category>
			<description>Used for the "xpath" option. This attribute contains the label to display int the "Active Filters" widget bubble.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="xPathAttribute" type="attribute" entityProperty="filterEntity" required="false">
			<caption>XPath Attribute</caption>
			<category>Behavior</category>
			<description>Used for the "xpath" option. This attribute of the filter entity should contain an XPath constraint to apply on the grid entity.</description>
			<attributeTypes>
				<attributeType name="String"/>
			</attributeTypes>
		</property>
		<property key="referenceToAttribute" type="attribute" entityProperty="gridEntity" isPath="yes" pathType="reference" required="false">
			<caption>Reference</caption>
			<category>Behavior</category>
			<description>The attribute to use in the filter, over a reference. Optionally use this OR a path over a reference set.</description>
			<attributeTypes>
				<attributeType name="String"/>
				<attributeType name="Integer"/>
				<attributeType name="Decimal"/>
				<attributeType name="Long"/>
				<attributeType name="AutoNumber"/>
				<attributeType name="Boolean"/>
				<attributeType name="Enum"/>
			</attributeTypes>
		</property>

		<property key="referenceSetToAttribute" type="attribute" entityProperty="gridEntity" isPath="optional" pathType="referenceSet" required="false">
			<caption>Reference Set</caption>
			<category>Behavior</category>
			<description>The attribute to use in the filter, over a reference set. Optionally use this OR a path over a reference OR a custom path.</description>
			<attributeTypes>
				<attributeType name="String"/>
				<attributeType name="Integer"/>
				<attributeType name="Decimal"/>
				<attributeType name="Long"/>
				<attributeType name="AutoNumber"/>
				<attributeType name="Boolean"/>
				<attributeType name="Enum"/>
			</attributeTypes>
		</property>
		<property key="stringPathToAttribute" type="string" required="false" defaultValue="">
			<caption>Custom Path</caption>
			<category>Behavior</category>
			<description>A path to an attribute over any kind of reference. Optionally use this instead of Reference or Reference Set if you need to navigate both types of associations.</description>
		</property>

		<property key="constraint" type="entityConstraint" entityProperty="filterEntity" required="false" defaultValue="">
			<caption>Contraint</caption>
			<category>Behavior</category>
			<description>A filter for the options to be shown.</description>
		</property>
	</properties>
</widget>
